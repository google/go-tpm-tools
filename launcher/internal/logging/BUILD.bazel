load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "logging",
    srcs = ["logging.go"],
    importpath = "github.com/google/go-tpm-tools/launcher/internal/logging",
    visibility = ["//launcher:__subpackages__"],
    deps = [
        "@com_google_cloud_go_compute_metadata//:go_default_library",
        "@com_google_cloud_go_logging//:go_default_library",
        "@org_golang_google_genproto_googleapis_api//monitoredres",
