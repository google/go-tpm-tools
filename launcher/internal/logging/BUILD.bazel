go_test(
    name = "logging_test",
    srcs = ["logging_test.go"],
    embed = [":logging"],
    deps = [
        "@com_github_google_go_cmp//cmp",
        "@com_google_cloud_go_logging//:go_default_library",
        "@org_golang_google_genproto_googleapis_api//monitoredres",
    ],
